@model LeafLoop.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = $"Profil użytkownika - {Model.FirstName} {Model.LastName}"; // Użyj danych z VM
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div id="react-user-profile" data-user-id="@Model.UserId">
                <div class="d-flex justify-content-center align-items-center py-5">
                    <div class="spinner-border text-success" role="status">
                        <span class="visually-hidden">Ładowanie profilu...</span>
                    </div>
                </div>
            </div>

            <div class="mt-4">
                <h5>Twoje najnowsze przedmioty (@Model.TotalItemsCount)</h5>
                <div class="list-group">
                    @if (Model.RecentItems != null && Model.RecentItems.Any())
                    {
                        foreach (var item in Model.RecentItems) // Używamy ItemDto z ViewModelu
                        {
                            <a href="/Items/Details/@item.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@item.Name</h6>
                                    <small>@item.DateAdded.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="mb-1 text-truncate">@item.Description</p>
                                <small class="text-muted">Kategoria: @item.CategoryName</small> </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">
                            <p class="mb-0 text-muted">Nie masz jeszcze żadnych przedmiotów.</p>
                        </div>
                    }
                </div>
                <div class="mt-3">
                    <a href="/Items/Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Dodaj nowy przedmiot
                    </a>
                     <a href="/Items/MyItems" class="btn btn-outline-secondary">
                        <i class="bi bi-list-ul"></i> Zobacz wszystkie (@Model.TotalItemsCount)
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
             <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Szybkie akcje</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="/Profile/Edit/@Model.UserId" class="list-group-item list-group-item-action"> <i class="bi bi-pencil me-2"></i> Edytuj profil
                        </a>
                        <a href="/Items/MyItems" class="list-group-item list-group-item-action">
                            <i class="bi bi-box2 me-2"></i> Moje przedmioty
                        </a>
                        <a href="/Transactions" class="list-group-item list-group-item-action"> <i class="bi bi-arrow-left-right me-2"></i> Moje transakcje
                        </a>
                        <a href="/Messages" class="list-group-item list-group-item-action"> <i class="bi bi-envelope me-2"></i> Wiadomości
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Statystyki</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            EcoScore
                            <span class="badge bg-success rounded-pill">@Model.EcoScore</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Wystawione przedmioty
                            <span class="badge bg-primary rounded-pill">@Model.TotalItemsCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Zakończone transakcje
                            <span class="badge bg-primary rounded-pill">@Model.TotalTransactionsCount</span>
                        </li>
                         <li class="list-group-item d-flex justify-content-between align-items-center">
                            Średnia ocena
                            <span class="badge bg-warning rounded-pill">@Model.AverageRating.ToString("0.0") / 5.0</span>
                        </li>
                    </ul>
                </div>
            </div>

            @if (Model.Badges != null && Model.Badges.Any())
            {
                <div class="card mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Odznaki</h5>
                    </div>
                    <div class="card-body d-flex flex-wrap gap-2 justify-content-center align-items-center"> @* Dodano align-items-center *@
                        @foreach (var badge in Model.Badges)
                        {
                            <span class="badge bg-secondary p-2 d-inline-flex align-items-center" title="@badge.Description"> @* Dodano d-inline-flex align-items-center *@
                                @* Zamiast <i class="@(badge.IconCssClass ?? "bi bi-trophy") ..."> *@
                                @* Użyj <img> jeśli IconPath istnieje, inaczej fallback <i> *@
                                @if (!string.IsNullOrEmpty(badge.IconPath))
                                {
                                    <img src="@badge.IconPath" alt="@badge.Name" class="me-1" style="height: 1.1em; width: auto; vertical-align: middle;" /> @* Dostosuj style wg potrzeb *@
                                }
                                else
                                {
                                    <i class="bi bi-trophy me-1"></i> }
                                <span style="vertical-align: middle;">@badge.Name</span> @* Opakuj tekst w span dla lepszego wyrównania *@
                            </span>
                        }
                    </div>
                </div>
            }

        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dist/userProfile.bundle.js" asp-append-version="true"></script>
}