@model LeafLoop.Models.User
@{
    ViewData["Title"] = "Profil użytkownika";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <!-- React component will be rendered here -->
            <div id="react-user-profile" data-user-id="@Model.Id"></div>
            
            <div class="mt-4">
                <h5>Twoje najnowsze przedmioty</h5>
                <div class="list-group">
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var item in Model.Items.OrderByDescending(i => i.DateAdded).Take(5))
                        {
                            <a href="/Items/Details/@item.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@item.Name</h6>
                                    <small>@item.DateAdded.ToString("dd.MM.yyyy")</small>
                                </div>
                                <p class="mb-1 text-truncate">@item.Description</p>
                                <small class="text-muted">Kategoria: @item.Category?.Name</small>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">
                            <p class="mb-0 text-muted">Nie masz jeszcze żadnych przedmiotów.</p>
                        </div>
                    }
                </div>
                <div class="mt-3">
                    <a href="/Items/Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Dodaj nowy przedmiot
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Szybkie akcje</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <a href="/Profile/Edit" class="list-group-item list-group-item-action">
                            <i class="bi bi-pencil me-2"></i> Edytuj profil
                        </a>
                        <a href="/Items/MyItems" class="list-group-item list-group-item-action">
                            <i class="bi bi-box2 me-2"></i> Moje przedmioty
                        </a>
                        <a href="/Transactions/MyTransactions" class="list-group-item list-group-item-action">
                            <i class="bi bi-arrow-left-right me-2"></i> Moje transakcje
                        </a>
                        <a href="/Messages/Inbox" class="list-group-item list-group-item-action">
                            <i class="bi bi-envelope me-2"></i> Wiadomości
                        </a>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Statystyki</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            EcoScore
                            <span class="badge bg-success rounded-pill">@Model.EcoScore</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Przedmioty
                            <span class="badge bg-primary rounded-pill">@(Model.Items?.Count ?? 0)</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Transakcje
                            <span class="badge bg-primary rounded-pill">@((Model.SellingTransactions?.Count ?? 0) + (Model.BuyingTransactions?.Count ?? 0))</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dist/userProfile.bundle.js"></script>
}