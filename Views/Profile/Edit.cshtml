@* Ścieżka: Views/Profile/Edit.cshtml *@
@{
    ViewData["Title"] = "Edytuj Profil";
    // Pobierz userId przekazane z kontrolera ProfileController.Edit()
    // ViewBag.UserId jest ustawiany w akcji GET kontrolera ProfileController
    var userId = ViewBag.UserId ?? 0;
    // Jeśli chcesz przekazać więcej danych z ProfileViewModel do komponentu React,
    // możesz to zrobić serializując cały model lub jego części, podobnie jak w Index.cshtml
    // np. @model LeafLoop.ViewModels.Profile.ProfileViewModel (jeśli przekażesz model z akcji Edit GET)
    // data-profile-edit-vm="@Newtonsoft.Json.JsonConvert.SerializeObject(Model)"
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Strona Główna</a></li>
            <li class="breadcrumb-item"><a asp-controller="Profile" asp-action="Index">Mój Profil</a></li> {/* Zakładając, że /Profile/Index to zawsze Twój profil, lub dodaj ID jeśli trzeba */}
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <h1 class="mb-4 display-5 border-bottom pb-2">@ViewData["Title"]</h1>

    @if (userId > 0)
    {
        // Kontener dla komponentu React - przekazuje ID użytkownika
        // Komponent React ProfileEditForm powinien być odpowiedzialny za pobranie aktualnych danych
        // użytkownika do edycji za pomocą API, używając przekazanego data-user-id.
        <div id="react-profile-edit-form-container" data-user-id="@userId">
            <div class="text-center py-5">
                <div class="spinner-border text-success" role="status" style="width: 3rem; height: 3rem;">
                    <span class="visually-hidden">Ładowanie formularza edycji...</span>
                </div>
                <p class="mt-2 text-muted">Ładowanie danych profilu do edycji...</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            <h4 class="alert-heading">Błąd!</h4>
            <p>Nie można załadować formularza edycji profilu, ponieważ ID użytkownika jest nieprawidłowe lub nie zostało przekazane.</p>
            <hr>
            <p class="mb-0">Spróbuj wrócić do swojego profilu i ponownie kliknąć opcję edycji.</p>
        </div>
    }
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/dist/profileEditForm.bundle.js" asp-append-version="true"></script>
}