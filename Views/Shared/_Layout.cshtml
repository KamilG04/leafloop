<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeafLoop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
   
    <script type="importmap"></script>
</head>
<body>

<header>
    <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-recycle text-success me-2"></i>LeafLoop
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Items" asp-action="Index">Przedmioty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Wydarzenia</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Items" asp-action="MyItems">Moje przedmioty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transactions" asp-action="Index">Transakcje</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <button id="theme-toggle" class="btn btn-link nav-link">
                            <i class="bi bi-moon-stars"></i>
                        </button>
                    </li>
                    <partial name="_LoginPartial" />

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i> Admin
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown"> {/* Dodałem dropdown-menu-end dla lepszego wyrównania */}
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Dashboard</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users">Zarządzaj użytkownikami</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Items">Zarządzaj przedmiotami</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Reports">Zgłoszenia</a></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="AdminLogs">Logi administratora</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="SystemSettings">Ustawienia systemu</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="pb-3">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="text-success">LeafLoop</h5>
                <p class="text-muted">Platforma wymiany i recyklingu przedmiotów. Daj przedmiotom drugie życie!</p>
            </div>
            <div class="col-md-2 mb-3">
                <h6>Nawigacja</h6>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/">Strona główna</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" asp-controller="Items" asp-action="Index">Przedmioty</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" asp-controller="Events" asp-action="Index">Wydarzenia</a></li>
                </ul>
            </div>
            <div class="col-md-2 mb-3">
                <h6>Informacje</h6>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link p-0 text-muted" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" asp-controller="Home" asp-action="About">O nas</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" asp-controller="Home" asp-action="Contact">Kontakt</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-3">
                <h6>Dołącz do nas</h6>
                <p class="text-muted">Śledź nas w mediach społecznościowych</p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-success fs-4"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-success fs-4"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-success fs-4"><i class="bi bi-twitter"></i></a>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between pt-4 mt-4 border-top">
            <p>&copy; @DateTime.Now.Year - LeafLoop - Wszelkie prawa zastrzeżone</p> {/* Dynamiczny rok */}
            <p>Made with <i class="bi bi-heart-fill text-danger"></i> for the planet</p>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true" type="module"></script>

@if (User.Identity.IsAuthenticated)
{
    <script>
        console.log("User is authenticated according to server-side check");
        // Usunąłem logowanie claims dla bezpieczeństwa, chyba że jest to absolutnie konieczne do debugowania
        // console.log("User claims:", @Html.Raw(Json.Serialize(User.Claims.Select(c => new { type = c.Type, value = c.Value }))));
    </script>
}
else
{
    <script>
        console.log("User is NOT authenticated according to server-side check");
    </script>
}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const hasJwtCookie = document.cookie.includes('jwt_token='); // Proste sprawdzenie, może wymagać ulepszenia
        console.log("Client-side check: Has JWT cookie:", hasJwtCookie);

        const isLoggedInServerSide = @(User.Identity.IsAuthenticated ? "true" : "false");
        if (isLoggedInServerSide && !hasJwtCookie) {
            console.warn("Server indicates user is logged in, but no JWT cookie found client-side. This might indicate a logout or cookie issue.");
        }
    });
</script>
@if (Context.Request.Cookies["jwt_token"] != null || User.Identity.IsAuthenticated) // Sprawdzenie tokena JWT lub statusu uwierzytelnienia
{
    <script src="~/js/token-test.js" asp-append-version="true"></script>
}
@if (User.Identity.IsAuthenticated)
{
    <script src="~/js/auth-test.js" asp-append-version="true"></script> }
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>