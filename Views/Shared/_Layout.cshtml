<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LeafLoop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dark-mode.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LeafLoop.styles.css" asp-append-version="true" />
    <script type="importmap"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="bi bi-recycle text-success me-2"></i>LeafLoop
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Items" asp-action="Index">Przedmioty</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Events" asp-action="Index">Wydarzenia</a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Items" asp-action="MyItems">Moje przedmioty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Transactions" asp-action="Index">Transakcje</a>
                        </li>
                    }
                </ul>
                <ul class="navbar-nav">
                    <!-- Theme toggle button -->
                    <li class="nav-item">
                        <button id="theme-toggle" class="btn btn-link nav-link">
                            <i class="bi bi-moon-stars"></i>
                        </button>
                    </li>
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
</header>
<main role="main" class="pb-3">
    @RenderBody()
</main>

<footer class="border-top footer text-muted">
    <div class="container py-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <h5 class="text-success">LeafLoop</h5>
                <p class="text-muted">Platforma wymiany i recyklingu przedmiotów. Daj przedmiotom drugie życie!</p>
            </div>
            <div class="col-md-2 mb-3">
                <h6>Nawigacja</h6>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/">Strona główna</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/Items">Przedmioty</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/Events">Wydarzenia</a></li>
                </ul>
            </div>
            <div class="col-md-2 mb-3">
                <h6>Informacje</h6>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/Home/Privacy">Polityka prywatności</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/Home/About">O nas</a></li>
                    <li class="nav-item"><a class="nav-link p-0 text-muted" href="/Home/Contact">Kontakt</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-3">
                <h6>Dołącz do nas</h6>
                <p class="text-muted">Śledź nas w mediach społecznościowych</p>
                <div class="d-flex gap-3">
                    <a href="#" class="text-success fs-4"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-success fs-4"><i class="bi bi-instagram"></i></a>
                    <a href="#" class="text-success fs-4"><i class="bi bi-twitter"></i></a>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-between pt-4 mt-4 border-top">
            <p>&copy; 2025 - LeafLoop - Wszystkie prawa zastrzeżone</p>
            <p>Made with <i class="bi bi-heart-fill text-danger"></i> for the planet</p>
        </div>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true" type="module"></script>
<!-- Add near the end of _Layout.cshtml, before </body> -->
@if (User.Identity.IsAuthenticated)
{
    <script>
        console.log("User is authenticated according to server-side check");
        console.log("User claims:", @Html.Raw(Json.Serialize(User.Claims.Select(c => new { type = c.Type, value = c.Value }))));
    </script>
}
else
{
    <script>
        console.log("User is NOT authenticated according to server-side check");
    </script>
}

<script>
    // Check client-side auth state
    document.addEventListener('DOMContentLoaded', function() {
        const hasJwtCookie = document.cookie.includes('jwt_token=');
        console.log("Has JWT cookie:", hasJwtCookie);

        // If logged in but no cookie, might indicate a problem
        const isLoggedIn = @(User.Identity.IsAuthenticated ? "true" : "false");
        if (isLoggedIn && !hasJwtCookie) {
            console.warn("Server thinks user is logged in but no JWT cookie found!");
        }
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>