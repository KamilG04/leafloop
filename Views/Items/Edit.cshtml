@{
    ViewData["Title"] = "Edit Item";
    var itemId = ViewBag.ItemId ?? 0;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Items">Items</a></li>
            <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@itemId">Details</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit</li>
        </ol>
    </nav>

    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div id="react-item-edit-form-container" data-item-id="@itemId">
        <div class="d-flex justify-content-center align-items-center" style="min-height: 200px;">
            <div class="spinner-border text-success" role="status">
                <span class="visually-hidden">Loading edit form...</span>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/dist/itemEditForm.bundle.js" asp-append-version="true"></script>
}