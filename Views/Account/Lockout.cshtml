@{
    ViewData["Title"] = "Konto zablokowane";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-warning shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">@ViewData["Title"]</h4>
                </div>
                <div class="card-body text-center">
                    <i class="bi bi-lock text-warning" style="font-size: 4rem;"></i>
                    <h5 class="mt-3">Twoje konto zostało tymczasowo zablokowane.</h5>
                    <p class="text-muted">Spróbuj ponownie później lub skontaktuj się z administratorem w celu odblokowania konta.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary mt-3">
                        <i class="bi bi-house-door"></i> Wróć na stronę główną
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>