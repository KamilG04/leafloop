@model IEnumerable<LeafLoop.Services.DTOs.ItemDto>
@{
    ViewData["Title"] = "Item Management";
}

<div class="container-fluid">
    <h1>Item Management</h1>
    
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Date Added</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.UserName</td>
                            <td>@item.CategoryName</td>
                            <td>
                                @if (item.IsAvailable)
                                {
                                    <span class="badge bg-success">Available</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Unavailable</span>
                                }
                            </td>
                            <td>@item.DateAdded.ToString("d")</td>
                            <td>
                                <a href="@Url.Action("Details", "Items", new { id = item.Id })" class="btn btn-sm btn-info">View</a>
                                <form asp-action="DeleteItem" asp-route-id="@item.Id" method="post" class="d-inline" 
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>